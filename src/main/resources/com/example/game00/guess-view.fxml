<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="379.0" prefWidth="552.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game00.controller.GuessNumberController">
    <Label text="Enter a number from 1 to 100:">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="numberField" prefHeight="46.0" prefWidth="512.0" />
    <Button onAction="#processGuess" prefHeight="56.0" prefWidth="90.0" text="Guess" />
    <TextArea fx:id="textArea" editable="false" prefHeight="129.0" prefWidth="552.0" />
    <Button text="Go to the chat room" onAction="#openChat" prefHeight="56.0" prefWidth="150.0"/>
</VBox>